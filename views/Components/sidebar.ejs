<div
  id="sidebarId"
  class="position-relative d-flex flex-column flex-shrink-0 p-3 text-bg-dark sidebar"
>
  <span style="right: 10px; top: 2px" class="position-absolute">
    <button class="btn" onclick="toggleSidebar()">
      <i class="bi bi-x-circle"></i>
    </button>
  </span>

  <a
    href="/"
    class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none"
  >
    <i class="bi bi-lightning-charge"></i>
    <span class="fs-4 sidebar-text">InfoMate</span>
  </a>
  <hr />
  <ul class="nav nav-pills flex-column mb-auto">
    <li class="nav-item">
      <a
        href="/"
        class="nav-link text-white <%= currentPage === 'index' ? 'active' : null %>"
        aria-current="page"
      >
        <i class="bi bi-house-door me-2"></i>
        <span class="sidebar-text">Dashboard</span>
      </a>
    </li>

    <li class="nav-item">
      <a
        href="/user/add"
        class="nav-link text-white <%= currentPage === 'add' ? 'active' : null %>"
      >
        <i class="bi bi-person-plus me-2"></i>
        <span class="sidebar-text">Add Customers</span>
      </a>
    </li>

    <li class="nav-item">
      <a
        href="/profile"
        class="nav-link text-white <%= currentPage === 'profile' ? 'active' : null %>"
      >
        <i class="bi bi-person-circle me-2"></i>
        <span class="sidebar-text">Profile</span>
      </a>
    </li>
  </ul>
  <hr />
  <div class="dropdown">
    <a
      href="#"
      class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
      data-bs-toggle="dropdown"
      aria-expanded="false"
    >
      <img
        src="<%= user.profilePhoto || '/img/default-avatar.png' %>?<%= Date.now() %>"
        alt="<%= user.name %>'s profile"
        width="32"
        height="32"
        class="rounded-circle me-2"
        onerror="this.src='/img/default-avatar.png'"
      />
      <strong class="sidebar-text"><%= user.name %></strong>
    </a>
    <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
      <li><a class="dropdown-item" href="#">New project...</a></li>
      <li><a class="dropdown-item" href="#">Settings</a></li>
      <li><a class="dropdown-item" href="/profile">Profile</a></li>
      <li><hr class="dropdown-divider" /></li>
      <li><a class="dropdown-item" href="/logout">Sign out</a></li>
    </ul>
  </div>
</div>

<div class="b-example-divider b-example-vr"></div>
