<link rel="shortcut icon" href="./img/Black White Minimalist Professional Initial Logo.png" type="image/x-icon" />
<div class="auth-container">
  <h2 class="text-center mb-4">Reset Password</h2>
  <form action="/auth/reset-password" method="POST">
    <input type="hidden" name="token" value="<%= token %>" />
    <div class="mb-3">
      <label for="password" class="form-label">New Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        required
      />
      <% if (typeof errors !== 'undefined' && errors.password) { %>
      <div class="error-message"><%= errors.password %></div>
      <% } %>
    </div>
    <div class="mb-3">
      <label for="confirmPassword" class="form-label"
        >Confirm New Password</label
      >
      <input
        type="password"
        class="form-control"
        id="confirmPassword"
        name="confirmPassword"
        required
      />
      <% if (typeof errors !== 'undefined' && errors.confirmPassword) { %>
      <div class="error-message"><%= errors.confirmPassword %></div>
      <% } %>
    </div>
    <button type="submit" class="btn btn-primary w-100">Reset Password</button>
  </form>
  <div class="text-center mt-3">
    <p><a href="/signin">Back to Sign In</a></p>
  </div>
</div>

<script>
  // Password confirmation validation
  document.querySelector("form").addEventListener("submit", function (e) {
    const password = document.getElementById("password").value;
    const confirmPassword = document.getElementById("confirmPassword").value;

    if (password !== confirmPassword) {
      e.preventDefault();
      alert("Passwords do not match!");
    }
  });
</script>
